    <script>
        // JSON 데이터 (제공된 데이터 기반)
        const jsonData = {
            "Asthma": {
                "Asthma": 0.66931,
                "Bronchitis": 0.25000,
                "Pneumonia": 0.03000,
                "A1C": 0.00217,
                "BP": 0.00526
            }
        };

        // 결과 표시 함수
        function showResults() {
            const prediction = "Asthma";
            const tableBody = document.getElementById('resultsTable');
            const mainPrediction = document.getElementById('mainPrediction');

            // 메인 예측 결과 업데이트
            mainPrediction.textContent = prediction;

            // 테이블 업데이트
            tableBody.innerHTML = ''; 
            const asthmaPredictions = jsonData["Asthma"];
            Object.keys(asthmaPredictions).forEach(condition => {
                const confidence = asthmaPredictions[condition];
                let note;

                if (condition === "천식"){
                    note = "주요 진단";
                } else if (confidence >0.1){ //10% 이상일 경우
                    note ="가능성 높은 질환";
                } else {
                    note ="가능성 낮은 질환";
                }

                const row = `
                    <tr>
                        <td>${condition}</td>
                        <td>${(confidence * 100).toFixed(2)}%</td>
                        <td>${note}</td>
                    </tr>    
                `;
                tableBody.innerHTML += row;
                
        
            });

            // 그래프 업데이트
            updateBarChart(asthmaPredictions);
        }

        // 그래프 생성 함수
        function updateBarChart(data) {
            const labels = Object.keys(data);
            const chartData = Object.values(data).map(value => (value * 100).toFixed(2));
            const ctx = document.getElementById('barChart').getContext('2d');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Confidence (%)',
                        data: chartData,
                        backgroundColor: labels.map((label, index) => {
                            if (index === 0) {
                                //가장 높은 그래프는 눈에 띄는 색상
                                return 'rgba(255, 99, 132, 0.5)'; // 빨간색
                            } else if (index ===1){
                                //나머지 그래프는 비슷한 계열 색상
                                return 'rgba(54, 162, 235, 0.5)'; // 파란색
                            } else {
                                return 'rgba(75, 192, 192, 0.5)'; // 청록색
                            }
                        }),
                        borderColor: labels.map((label, index) => {
                            if (index === 0) {
                                return 'rgba(255, 99, 132, 1)'; // 빨간색 테두리
                            } else if (index === 1) {
                                return 'rgba(54, 162, 235, 1)'; // 파란색 테두리
                            } else {
                                return 'rgba(75, 192, 192, 1)'; // 청록색 테두리
                            }
                        }),
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });
        }

        // 페이지 로드 시 초기 결과 표시
        showResults();
    </script>
